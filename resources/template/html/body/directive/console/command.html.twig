<section>
<dl class="command">
    <dt{% if not node.noindex %} id="{{ node.anchor }}"{% endif -%}>
        {% include "body/directive/console/parts/commandHeader.html.twig" %}
    </dt>
    <dd>
        <div class="command-description">
            {{ node.description }}
        </div>
        {% if node.usage %}
            <div class="command-usage">
                <div class="h4">Usage</div>
                {% for item in node.usage %}
                    {{ renderNode(item) }}
                {% endfor %}
            </div>
        {% endif %}
        {% if node.argumentList %}
            <div class="command-arguments">
                <div class="h4">Arguments</div>
                {% for item in node.argumentList %}
                    {{ renderNode(item) }}
                {% endfor %}
            </div>
        {% endif %}
        {% if node.optionList %}
            <div class="command-options">
                <div class="h4">Options</div>
                {% for item in node.optionList %}
                    {{ renderNode(item) }}
                {% endfor %}
            </div>
        {% endif %}
        {% if node.help %}
            <div class="command-description-help">
                <div class="h4">Help</div>
                {{ renderNode(node.help) }}
            </div>
        {% endif %}
        {% if node.value %}
        <div class="command-description-extended">
            {{ renderNode(node.value) }}
        </div>
        {% endif %}
    </dd>
</dl>
</section>
