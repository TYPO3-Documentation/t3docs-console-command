<dl class="command">
    <dt{% if not node.noindex %} id="{{ node.anchor }}"{% endif -%}>
        <code class="sig-name descname"><span class="pre">{{ node.plainContent }}</span></code>
        {% if not node.noindex %}
            <a class="headerlink" href="#{{ node.anchor }}" data-bs-toggle="modal" data-bs-target="#linkReferenceModal" data-id="{{ node.anchor }}" data-rstCode="{{ getRstCodeForLink(node) }}"  title="Reference this configuration value">Â¶</a>
        {% else %}
            <span class="headerNoindex" title="This command cannot be linked directly. Consider to link to the section above."><i class="fa-solid fa-link-slash"></i></span>
        {% endif -%}
    </dt>
    <dd>
        <div class="command-description">
            {{ node.description }}
        </div>
        {% for item in node.usage %}
            {{ renderNode(item) }}
        {% endfor %}
        <div class="command-description-extended">
            {{ renderNode(node.value) }}
        </div>
    </dd>
</dl>
