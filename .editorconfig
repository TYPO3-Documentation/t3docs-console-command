# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file? false = no!
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true
charset = utf-8

# YAML-Files
[*.{yaml,yml}]
indent_size = 2

[Makefile]
# Use tabs for indentation (Makefiles require tabs)
indent_style = tab
